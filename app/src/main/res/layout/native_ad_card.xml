<?xml version="1.0" encoding="utf-8"?>
<!--
    Native Ad layout for the Trending feed.
    Place at: app/src/main/res/layout/native_ad_card.xml

    AdMob requires three elements to be registered on NativeAdView:
      1. headlineView  — the ad headline (mandatory)
      2. ad_attribution — the "Ad" label badge (mandatory for policy compliance)
      3. AdChoices overlay — injected automatically by the SDK at top-right

    All other fields (body, icon, CTA, advertiser) are optional but improve fill rate.
    The layout mirrors TrendCard visually: icon slot | text column.
-->
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Root column: "Ad" badge on top, then content row below -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--
            Ad Attribution badge — REQUIRED by AdMob policy.
            Must be registered as adAttributionView on the NativeAdView.
            The SDK populates the text ("Ad") automatically; we just style it.
        -->
        <TextView
            android:id="@+id/ad_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="#FFCC00"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="Ad"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Content row: icon + text column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Ad icon — mirrors the TrendingUp icon slot -->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- Text column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Headline — bodyLarge / SemiBold equivalent -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Body — bodySmall / onSurfaceVariant equivalent -->
                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Advertiser / CTA — labelSmall / primary colour equivalent -->
                <TextView
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
